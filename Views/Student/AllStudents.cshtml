@{
}
@model List<Etudiant>

<div class="container mt-5">
    <h2>All Students</h2>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Last name</th>
                <th scope="col">First name</th>
               <th  scope="col">Designation</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Nom</td>
                    <td>@student.Prenom</td>
                    <td>@student.cours?.Designation</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@student.Id_Etudiant" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this Student?')"><i class="fa fa-trash-alt fa-lg">Delete</i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

