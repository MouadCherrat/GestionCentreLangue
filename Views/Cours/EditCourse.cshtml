@model Cours

<h2>Edit Course</h2>

<form method="post" action="EditCourse">
    <div class="form-group">
        <label for="designation">Désignation du cours:</label>
        <input type="text" class="form-control" id="designation" name="designation" value="@Model.Designation" required>
        <div class="invalid-feedback">Veuillez saisir la désignation du cours.</div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
    </div>
</form>
