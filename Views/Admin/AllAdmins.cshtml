@{
}
@model List<Admin>

<h2>All Admins</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Login</th>
            <th>Password</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.Id_Admin</td>
                <td>@admin.Login</td>
                <td>@admin.MotDePasse</td>
                <td>
                    <a href="#" class="btn btn-danger" onclick="deleteAdmin('@admin.Id_Admin')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
